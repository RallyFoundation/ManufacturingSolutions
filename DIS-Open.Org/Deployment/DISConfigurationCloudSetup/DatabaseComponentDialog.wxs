<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
    <UI>
      <Dialog Id="DatabaseComponentDialog" Width="370" Height="270" Title="!(loc.DbConfigurationTitle)">
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
          <Publish Property="CONNECTIONSTRINGONINIT" Value="Data Source=[DB_SERVER_ADDRESS];Initial Catalog=master;Integrated Security=False;User ID=[DB_SERVER_LOGIN_NAME];Password=[DB_SERVER_PASSWORD];MultipleActiveResultSets=True">1</Publish>
          <Publish Property="CONNECTIONSTRING" Value="Data Source=[DB_SERVER_ADDRESS];Initial Catalog=[DB_NAME];Integrated Security=False;User ID=[DB_SERVER_LOGIN_NAME];Password=[DB_SERVER_PASSWORD];MultipleActiveResultSets=True">1</Publish>
          <Publish Property="DATABASENAME" Value="[DB_NAME]"/>
          <Publish Property="INSTANCENAME" Value="[DB_SERVER_ADDRESS]"/>
          <Publish Property="EXCEPTIONINFO" Value="[DB_CONNECTIONTESTTOOL_EXCEPTION]"/>
          <Publish Event="DoAction" Value="ConnectDbAction"><![CDATA[PREVIOUSVERSIONSINSTALLED <> "" OR NOT (&DatabaseFeature=3)]]></Publish>
          <Publish Event="DoAction" Value="ConnectDbOnInitAction"><![CDATA[PREVIOUSVERSIONSINSTALLED = "" AND (&DatabaseFeature=3)]]></Publish>
          <Publish Event="SpawnDialog" Value="InvalidLogonDlg"><![CDATA[CONNECTSUCCESS = "-1" AND NOT Installed]]></Publish>
          <Publish Event="SpawnDialog" Value="DatabaseExistsDlg"><![CDATA[CONNECTSUCCESS = "-2" AND NOT Installed]]></Publish>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.DbConfigurationDescription)" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}!(loc.DbConfigurationTitle)" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Id="ServerNameLabel" Type="Text" X="20" Y="100" Width="124" Height="17" NoPrefix="yes" Text="!(loc.InstanceNameInput)" />
        <Control Type="Edit" Id="ServerName" Property="DB_SERVER_ADDRESS" Width="120" Height="15" X="160" Y="100" />
        <Control Id="DatabaseNameLabel" Type="Text" X="20" Y="130" Width="124" Height="17" NoPrefix="yes" Text="!(loc.DatabaseNameInput)" />
        <Control Type="Edit" Id="DatabaseName" Property="DB_NAME" Width="120" Height="15" X="160" Y="130" />
        <Control Id="UsernameLabel" Type="Text" X="20" Y="160" Width="124" Height="17" NoPrefix="yes" Text="!(loc.UsernameInput)">
        </Control>
        <Control Type="Edit" Id="Username" Property="DB_SERVER_LOGIN_NAME" Width="120" Height="17" X="160" Y="160">
        </Control>
        <Control Id="PasswordLabel" Type="Text" X="20" Y="190" Width="124" Height="17" NoPrefix="yes" Text="!(loc.PasswordInput)">
        </Control>
        <Control Type="Edit" Id="Password" Property="DB_SERVER_PASSWORD" Password="yes" Width="120" Height="17" X="160" Y="190">
        </Control>
      </Dialog>
    </UI>
	</Fragment>
</Wix>