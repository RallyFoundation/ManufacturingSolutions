<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>

    <CustomAction Id="TestCloudConnectionAction" BinaryKey="ConnectDbBinary" DllEntry="TestCloudConnection"/>
    
    <UI>
      <Dialog Id="CloudConfigDlg" Width="370" Height="270" Title="!(loc.InstallDirDlg_Title)">
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
          <!--<Publish Property="CONNECTIONSTRINGONINIT" Value="Data Source=[SERVERNAME];Initial Catalog=master;Integrated Security=True;Pooling=False;MultipleActiveResultSets=True">AUTHTYPE = 1</Publish>
          <Publish Property="CONNECTIONSTRINGONINIT" Value="Data Source=[SERVERNAME];Initial Catalog=master;Integrated Security=False;User ID=[USERNAME];Password=[PASSWORD];Pooling=False;MultipleActiveResultSets=True">AUTHTYPE = 2</Publish>
          <Publish Property="CONNECTIONSTRING" Value="Data Source=[SERVERNAME];Initial Catalog=[DATABASENAME];Integrated Security=True;Pooling=False;MultipleActiveResultSets=True">AUTHTYPE = 1</Publish>
          <Publish Property="CONNECTIONSTRING" Value="Data Source=[SERVERNAME];Initial Catalog=[DATABASENAME];Integrated Security=False;User ID=[USERNAME];Password=[PASSWORD];Pooling=False;MultipleActiveResultSets=True">AUTHTYPE = 2</Publish>
          <Publish Event="DoAction" Value="ConnectDbAction"><![CDATA[PREVIOUSVERSIONSINSTALLED <> "" OR NOT (&DatabaseFeature=3)]]></Publish>
          <Publish Event="DoAction" Value="ConnectDbOnInitAction"><![CDATA[PREVIOUSVERSIONSINSTALLED = "" AND (&DatabaseFeature=3)]]></Publish>
          <Publish Event="SpawnDialog" Value="InvalidLogonDlg"><![CDATA[CONNECTSUCCESS = "-1" AND NOT Installed]]></Publish>
          <Publish Event="SpawnDialog" Value="DatabaseExistsDlg"><![CDATA[CONNECTSUCCESS = "-2" AND NOT Installed]]></Publish>-->
          <!--<Publish  Property="ConfigurationCloudAuthHeader" Value="[ConfigurationCloudUserName]:[ConfigurationCloudPassword]"/>-->
          <Publish Property="CLOUDSERVICEPOINT" Value="[CONFIGURATION_CLOUD_SERVER_ADDRESS]">1</Publish>
          <Publish Property="CLOUDUSERNAME" Value="[CONFIGURATION_CLOUD_USERNAME]">1</Publish>
          <Publish Property="CLOUDPASSWORD" Value="[CONFIGURATION_CLOUD_PASSWORD]">1</Publish>
          <Publish Event="DoAction" Value="TestCloudConnectionAction"><![CDATA[CLOUD_CONFIG_CACHE_POLICY <>1]]></Publish>
          <Publish Event="SpawnDialog" Value="InvalidCloudConnectionDlg"><![CDATA[(CLOUD_CONFIG_CACHE_POLICY <> 1) AND (CONNECTSUCCESS <> "1") AND (NOT Installed)]]></Publish>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.CloudConfigurationDescription)" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}!(loc.CloudConfigurationTitle)" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Id="CachingPolicyLabel" Type="Text" X="20" Y="50" Width="270" Height="17" NoPrefix="yes" Text="!(loc.CloudConfigurationMetaCachingPolicy)" />
        <Control Id="CachingPolicyRadioButtons" Type="RadioButtonGroup" Property="CLOUD_CONFIG_CACHE_POLICY" Width="200" Height="60" X="20" Y="70">
          <RadioButtonGroup Property="CLOUD_CONFIG_CACHE_POLICY">
            <RadioButton Text="!(loc.CloudConfigurationMetaCachingPolicyRemoteOnly)" Height="17" Value="0" Width="250" X="0" Y="0"/>
            <!--<RadioButton Text="!(loc.CloudConfigurationMetaCachingPolicyMergedAll)" Height="17" Value="2" Width="250" X="0" Y="15" />-->
            <RadioButton Text="!(loc.CloudConfigurationMetaCachingPolicyLocalOnly)" Height="17" Value="1" Width="250" X="0" Y="30" />
          </RadioButtonGroup>
        </Control>

        <Control Id="CloudServicePointLabel" Type="Text" X="20" Y="130" Width="124" Height="17" NoPrefix="yes" Text="!(loc.CloudServicePointInput)">
          <Condition Action="disable"><![CDATA[CLOUD_CONFIG_CACHE_POLICY = 1]]></Condition>
          <Condition Action="enable"><![CDATA[CLOUD_CONFIG_CACHE_POLICY <> 1]]></Condition>
        </Control>
        <Control Type="Edit" Id="CloudServicePointName" Property="CONFIGURATION_CLOUD_SERVER_ADDRESS" Width="120" Height="15" X="160" Y="130">
           <Condition Action="disable"><![CDATA[CLOUD_CONFIG_CACHE_POLICY = 1]]></Condition>
          <Condition Action="enable"><![CDATA[CLOUD_CONFIG_CACHE_POLICY <> 1]]></Condition>
        </Control>
        <Control Id="UsernameLabel" Type="Text" X="20" Y="160" Width="124" Height="17" NoPrefix="yes" Text="!(loc.UsernameInput)">
          <Condition Action="disable"><![CDATA[CLOUD_CONFIG_CACHE_POLICY = 1]]></Condition>
          <Condition Action="enable"><![CDATA[CLOUD_CONFIG_CACHE_POLICY <> 1]]></Condition>
        </Control>
        <Control Type="Edit" Id="Username" Property="CONFIGURATION_CLOUD_USERNAME" Width="120" Height="17" X="160" Y="160">
          <Condition Action="disable"><![CDATA[CLOUD_CONFIG_CACHE_POLICY = 1]]></Condition>
          <Condition Action="enable"><![CDATA[CLOUD_CONFIG_CACHE_POLICY <> 1]]></Condition>
        </Control>
        <Control Id="PasswordLabel" Type="Text" X="20" Y="190" Width="124" Height="17" NoPrefix="yes" Text="!(loc.PasswordInput)">
          <Condition Action="disable"><![CDATA[CLOUD_CONFIG_CACHE_POLICY = 1]]></Condition>
          <Condition Action="enable"><![CDATA[CLOUD_CONFIG_CACHE_POLICY <> 1]]></Condition>
        </Control>
        <Control Type="Edit" Id="Password" Property="CONFIGURATION_CLOUD_PASSWORD" Password="yes" Width="120" Height="17" X="160" Y="190">
          <Condition Action="disable"><![CDATA[CLOUD_CONFIG_CACHE_POLICY = 1]]></Condition>
          <Condition Action="enable"><![CDATA[CLOUD_CONFIG_CACHE_POLICY <> 1]]></Condition>
        </Control>
      </Dialog>
    </UI>
	</Fragment>
</Wix>